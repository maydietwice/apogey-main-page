<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApogeyMainPage</title>

    <link rel="stylesheet" href="~/css/tailwind-output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApogeyMainPage.styles.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-screen text-black bg-white">

    <header>
        <nav class="bg-white border-b border-gray-200 shadow-sm mb-6">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">

                    <div class="flex-shrink-0">
                        <a asp-area="" asp-page="/Index" class="flex items-center">
                            <img src="images/logoMainNoBG.png" alt="Логотип Апогей" width="150" height="52" class="block" />
                        </a>
                    </div>

                    <div class="-mr-2 flex items-center sm:hidden">
                        <button type="button" id="mobile-menu-btn" class="inline-flex items-center justify-center p-2 rounded-md text-gray-800 hover:text-red-600 focus:outline-none transition duration-150 ease-in-out">
                            <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>

                    <div class="hidden sm:flex sm:ml-6">
                        <div class="flex space-x-4">
                            <a asp-area="" asp-page="/" class="text-black hover:text-red-600 px-3 py-2 rounded-md text-base font-medium font-bold transition-colors duration-200">
                                Филиалы
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="hidden sm:hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-100">
                    <a asp-area="" asp-page="/" class="block text-black hover:text-red-600 hover:bg-gray-50 px-3 py-2 rounded-md text-base font-medium">
                        Филиалы
                    </a>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex-grow pb-8">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 py-6 mt-auto">
        <div class="container mx-auto px-4 text-center text-sm text-gray-500">
            &copy; 2025 - Компания "Апогей" -
            <a href="tel:+78002008089" class="hover:text-red-600 transition-colors">8-800-200-80-89</a> |
            <a href="mailto:info@apogey.ru" class="hover:text-red-600 transition-colors">info@apogey.ru</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>
        document.getElementById('mobile-menu-btn').addEventListener('click', function () {
            var menu = document.getElementById('mobile-menu');
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
            } else {
                menu.classList.add('hidden');
            }
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
